{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "typeRoots": ["src/types", "node_modules/@types"],
    "noFallthroughCasesInSwitch": true,
    "incremental": true,
    "baseUrl": "src/",
    "paths": {
      // Folders
      "@/components/*": ["components/*"],
      "@/contexts/*": ["contexts/*"],
      "@/hooks/*": ["hooks/*"],
      "@/layouts/*": ["layouts/*"],
      "@/mocks/*": ["mocks/*"],
      "@/redux/*": ["redux/*"],
      "@/theme/*": ["theme/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"],
      "@/vendor/*": ["vendor/*"],
      // Files
      "@/constants": ["constants"],
      "@/config": ["config"],
      "@/i18n": ["i18n"],
      "@/mocks": ["mocks/index"],
      "@/theme": ["theme/index"],

      "@/lib/*": ["lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["src", ".next/types/**/*.ts", "test", "jest.setup.ts", "e2e/FormDialog.test.tsx"],
  "exclude": ["node_modules"]
}
